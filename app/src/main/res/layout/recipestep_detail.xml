<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipestep_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alvarosantisteban.bakingapp.RecipeStepDetailFragment">

    <ImageView
        android:id="@+id/tableHeaderImage"
        android:background="@color/colorAccent"
        android:layout_height="350dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/recipe_step_upper_area"
        android:layout_width="0dp"
        android:layout_height="334dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/tableHeaderImage"
        app:layout_constraintLeft_toLeftOf="@+id/tableHeaderImage"
        app:layout_constraintRight_toRightOf="@+id/tableHeaderImage" />

    <TextView
        android:id="@+id/recipe_step_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="ddesfew efewfwef fejifj l;efj wl;fjewfoj OFJEFWEJFop jfeowpfj ojf ewogjopagjeogmnfe f jew'pofjfo jfefjemw ofpjo jewofpj ewofpjefopejwp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/recipe_step_upper_area"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/recipe_step_previous_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_back_black_48px"
        android:clickable="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/recipe_step_description"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/recipe_step_next_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_forward_black_48px"
        android:clickable="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>