<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipestep_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.alvarosantisteban.bakingapp.RecipeStepDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/recipe_step_upper_area"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            tools:background="@color/colorPrimaryDark"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/recipe_step_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="ddesfew efewfwef fejifj l;efj wl;fjewfoj OFJEFWEJFop jfeowpfj ojf ewogjopagjeogmnfe f jew'pofjfo jfefjemw ofpjo jewofpj ewofpjefopejwp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/recipe_step_upper_area"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/recipe_step_previous_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back_black_48px"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/recipe_step_next_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_forward_black_48px"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>